#include <iostream>
using namespace std;

int main()
{
	int n,q;
	float t;
	
	cin>>n>>q;
	
	if(n==1)
	{
		t=q*4.00;
	}
	else
	{
		if(n==2)
		{
			t=q*4.50;
		}
		else
		{
			if(n==3)
			{
				t=q*5.00;
			}
			else
			{
				if(n==4)
				{
					t=q*2.00;
				}
				else
				{
					if(n==5)
					{
						t=q*1.50;
					}
				}
			}
		}
	}
	cout<<fixed;
	cout.precision(2);
	cout<<"Total: R$"<<t<<endl;	
}
